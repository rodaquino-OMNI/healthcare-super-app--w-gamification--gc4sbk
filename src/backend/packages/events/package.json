{
  "name": "@austa/events",
  "version": "1.0.0",
  "description": "Standardized event system for AUSTA SuperApp with Kafka integration, dead-letter queues, and retry strategies",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prebuild": "rimraf dist",
    "build:watch": "tsc -p tsconfig.build.json --watch"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/microservices": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/event-emitter": "^2.0.4",
    "kafkajs": "^2.2.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "rxjs": "^7.8.1",
    "reflect-metadata": "^0.1.13",
    "retry": "^0.13.1",
    "p-retry": "^6.2.0",
    "backoff": "^2.5.0",
    "ajv": "^8.12.0",
    "eventemitter2": "^6.4.9"
  },
  "peerDependencies": {
    "@austa/interfaces": "^1.0.0",
    "@austa/logging": "^1.0.0",
    "@austa/tracing": "^1.0.0",
    "@austa/errors": "^1.0.0",
    "@austa/utils": "^1.0.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/retry": "^0.12.5",
    "@types/backoff": "^2.5.5",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-nestjs": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3",
    "kafkajs-mock": "^1.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/../src/$1",
      "^@austa/interfaces(.*)$": "<rootDir>/../../interfaces/src$1",
      "^@austa/errors(.*)$": "<rootDir>/../../errors/src$1",
      "^@austa/logging(.*)$": "<rootDir>/../../logging/src$1",
      "^@austa/tracing(.*)$": "<rootDir>/../../tracing/src$1",
      "^@austa/utils(.*)$": "<rootDir>/../../utils/src$1"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/austa/superapp.git",
    "directory": "src/backend/packages/events"
  },
  "keywords": [
    "austa",
    "events",
    "kafka",
    "nestjs",
    "microservices",
    "dead-letter-queue",
    "retry",
    "event-versioning"
  ],
  "author": "AUSTA SuperApp Team",
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "restricted"
  },
  "sideEffects": false
}