{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": false,
    "noEmit": true,
    "paths": {
      "@app/errors/*": ["../src/*"],
      "@app/errors/test/*": ["./*/"]
    },
    "esModuleInterop": true
  },
  "include": [
    "../src/**/*.ts",
    "./**/*.ts",
    "../jest.config.js"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ]
}