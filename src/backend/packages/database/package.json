{
  "name": "@austa/database",
  "version": "1.0.0",
  "description": "Database management package with journey-specific contexts, connection pooling, and transaction management",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:generate": "prisma generate",
    "prisma:generate:health": "prisma generate --schema=./prisma/health/schema.prisma",
    "prisma:generate:care": "prisma generate --schema=./prisma/care/schema.prisma",
    "prisma:generate:plan": "prisma generate --schema=./prisma/plan/schema.prisma",
    "prisma:generate:all": "npm run prisma:generate:health && npm run prisma:generate:care && npm run prisma:generate:plan",
    "prisma:migrate:health": "prisma migrate dev --schema=./prisma/health/schema.prisma",
    "prisma:migrate:care": "prisma migrate dev --schema=./prisma/care/schema.prisma",
    "prisma:migrate:plan": "prisma migrate dev --schema=./prisma/plan/schema.prisma",
    "prisma:migrate:all": "npm run prisma:migrate:health && npm run prisma:migrate:care && npm run prisma:migrate:plan",
    "prisma:seed:health": "ts-node prisma/health/seed.ts",
    "prisma:seed:care": "ts-node prisma/care/seed.ts",
    "prisma:seed:plan": "ts-node prisma/plan/seed.ts",
    "prisma:seed:all": "npm run prisma:seed:health && npm run prisma:seed:care && npm run prisma:seed:plan"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@prisma/client": "^5.10.2",
    "@austa/errors": "^1.0.0",
    "@austa/logging": "^1.0.0",
    "@austa/tracing": "^1.0.0",
    "@austa/interfaces": "^1.0.0",
    "@austa/utils": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cls-hooked": "^4.2.2",
    "date-fns": "^3.3.1",
    "ioredis": "^5.3.2",
    "lodash": "^4.17.21",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/cls-hooked": "^4.3.8",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.11.30",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-nestjs": "^1.2.3",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "prisma": "^5.10.2",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@prisma/client": "^5.10.2",
    "@austa/errors": "^1.0.0",
    "@austa/logging": "^1.0.0",
    "@austa/tracing": "^1.0.0",
    "@austa/interfaces": "^1.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/austa/superapp.git",
    "directory": "src/backend/packages/database"
  },
  "keywords": [
    "database",
    "prisma",
    "connection-pooling",
    "transaction-management",
    "journey-context"
  ]
}