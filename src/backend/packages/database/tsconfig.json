{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    
    /* Stricter Type Checking */
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "exactOptionalPropertyTypes": true,
    
    /* Module Resolution */
    "baseUrl": "./src",
    "paths": {
      "@connection/*": ["connection/*"],
      "@contexts/*": ["contexts/*"],
      "@errors/*": ["errors/*"],
      "@middleware/*": ["middleware/*"],
      "@transactions/*": ["transactions/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts",
    "test/**/*"
  ],
  "references": [
    { "path": "../errors" },
    { "path": "../logging" },
    { "path": "../tracing" },
    { "path": "../utils" },
    { "path": "../interfaces" }
  ]
}