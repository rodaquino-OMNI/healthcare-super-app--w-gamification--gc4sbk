{
  "name": "@austa/validation",
  "version": "1.0.0",
  "description": "Validation utilities for the AUSTA SuperApp",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "build:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rimraf dist",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "zod": "3.22.4",
    "joi": "17.12.2",
    "class-validator": "0.14.1",
    "class-transformer": "0.5.1",
    "yup": "1.3.3",
    "reflect-metadata": "0.1.13"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "typescript": "5.3.3"
  },
  "keywords": [
    "validation",
    "schema",
    "typescript",
    "zod",
    "joi",
    "class-validator",
    "yup"
  ],
  "author": "AUSTA SuperApp Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/austa/superapp.git",
    "directory": "src/backend/packages/utils/validation"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}