{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "outDir": "../dist/test",
    "baseUrl": "./",
    "paths": {
      "@austa/utils/*": ["../src/*"],
      "@austa/utils/test/*": ["./"]
    }
  },
  "include": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.d.ts",
    "helpers/**/*.ts",
    "fixtures/**/*.ts",
    "mocks/**/*.ts",
    "unit/**/*.ts",
    "integration/**/*.ts",
    "e2e/**/*.ts"
  ]
}