{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/test",
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "paths": {
      "@austa/auth": ["../src"],
      "@austa/auth/*": ["../src/*"],
      "@austa/interfaces": ["../../interfaces"],
      "@austa/interfaces/*": ["../../interfaces/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}