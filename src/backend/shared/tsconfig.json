{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@app/shared": ["./src"],
      "@app/shared/*": ["./src/*"],
      "@austa/*": ["../packages/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.e2e-spec.ts"
  ],
  "references": [
    { "path": "../packages/database" },
    { "path": "../packages/errors" },
    { "path": "../packages/logging" },
    { "path": "../packages/utils" }
  ]
}