# This file serves as a template for the environment variables needed by the AUSTA SuperApp web application.
# Copy this file to .env.local for local development and configure the variables accordingly.
# For production deployments, these variables should be set in the hosting environment.
# All variables prefixed with NEXT_PUBLIC_ will be exposed to the browser.

# API Configuration
NEXT_PUBLIC_API_BASE_URL=https://api.austa.com.br/api

# Authentication Configuration
NEXT_PUBLIC_AUTH_DOMAIN=auth.austa.com.br
NEXT_PUBLIC_AUTH_CLIENT_ID=your_client_id_here

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# Analytics and Monitoring
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@xxxxxxxx.ingest.sentry.io/xxxxxxx
NEXT_PUBLIC_DATADOG_APPLICATION_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
NEXT_PUBLIC_DATADOG_CLIENT_TOKEN=pubxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Feature Flags
NEXT_PUBLIC_FEATURE_TELEMEDICINE=true
NEXT_PUBLIC_FEATURE_WEARABLE_SYNC=true
NEXT_PUBLIC_FEATURE_SOCIAL=false
NEXT_PUBLIC_FEATURE_AI_ASSISTANT=false

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=pt-BR

# Telemedicine
NEXT_PUBLIC_AGORA_APP_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Upload Configuration
NEXT_PUBLIC_UPLOAD_MAX_SIZE=10485760

# Deployment Information (automatically set by Vercel)
NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=